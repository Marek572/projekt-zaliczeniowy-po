            x:Name="img3"
            >
            </Image>
        </Border>
        <TextBox
            x:Name="WeatherStatus3"
            Grid.Column="4"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="5 0 5 0"
            FontSize="26"
            TextAlignment="Center"
