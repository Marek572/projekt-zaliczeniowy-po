            FontSize="30"
            TextAlignment="Center"
            VerticalContentAlignment="Center"
            IsEnabled="False"
            BorderThickness="1 0 1 0"
            >20°C
        </TextBox>
        <TextBox
            x:Name="WeatherTemp1Arr"
            Grid.Column="3"
            Grid.Row="3"
            Margin="0 0 15 0"
            Padding="0 0 0 5"
            FontSize="35"
            TextAlignment="Center"
            VerticalContentAlignment="Center"
            IsEnabled="False"
            Background="Transparent" HorizontalAlignment="Right"
            BorderThickness="0"
            >↑
