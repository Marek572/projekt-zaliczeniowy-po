        </TextBox>
        <TextBox
            x:Name="CurrentCity"
            Grid.Column="0"
            Grid.Row="6"
            Grid.ColumnSpan="8"
            Margin="10 5 10 5"
            BorderBrush="Black"
            Text="Current City"
            FontSize="25"
            TextAlignment="Center"
            VerticalContentAlignment="Center"
            IsEnabled="False"
            >
        </TextBox>
        <TextBox
            x:Name="enterX"
            Grid.Column="0"
            Grid.Row="7"
            Grid.ColumnSpan="2"
            Margin="10 5 5 5"
            Padding="0 0 10 0"
            BorderBrush="Black"
            Text="Latitude"
            FontSize="25"
            TextAlignment="Center"
            VerticalContentAlignment="Center"
            Foreground="Black"
            Background="#FF94FF72"
            GotFocus="enterX_GotFocus"
            />
        <TextBox
            x:Name="enterY"
            Grid.Column="2"
            Grid.Row="7"
            Grid.ColumnSpan="2"
            Margin="5 5 5 5"
            Padding="0 0 10 0"
            BorderBrush="Black"
            Text="Longtitude"
            FontSize="25"
            TextAlignment="Center"
            VerticalContentAlignment="Center"
            Foreground="Black"
            Background="#FF94FF72"
            GotFocus="enterY_GotFocus"
            />
        <ComboBox
            x:Name="SelectCity"
            Grid.Column="4"
            Grid.Row="7"
            Grid.ColumnSpan="4"
            Margin="5 5 10 5"
            FontSize="25"
            VerticalContentAlignment="Center" Foreground="Black" BorderBrush="Black"
            >
        </ComboBox>
        <Button
            x:Name="xySearch"
            Grid.Column="0"
            Grid.Row="8"
            Grid.ColumnSpan="4"
            Margin="10 5 5 10"
            BorderBrush="Black"
            FontSize="25" Click="Button_Click" Background="#FF94FF72"
