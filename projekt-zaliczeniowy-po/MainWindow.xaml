<Window x:Class="projekt_zaliczeniowy_po.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projekt_zaliczeniowy_po"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" Background="DarkGray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox 
            x:Name="WeatherDt1"
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="10 10 5 0"
            FontSize="20"
            TextAlignment="Center"
            VerticalContentAlignment="Center"
            TextWrapping="Wrap"
            IsEnabled="False"
            BorderThickness="1 1 1 0"
            >Now
        </TextBox>
        <Border
            Grid.Column="0"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            BorderThickness="1 0 1 0"
            Margin="10 0 5 0"
            Background="#FFD9D9D9"
            >
            <Image
            x:Name="img1"
            />
        </Border>
        <TextBox
            x:Name="WeatherStatus1"
            Grid.Column="0"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="10 0 5 0"
            FontSize="26"
            TextAlignment="Center"
            VerticalContentAlignment="Center"
            IsEnabled="False"
            BorderThickness="1 0 1 0"
            >Thunderstorm
        </TextBox>
        <TextBox 
            x:Name="WeatherTemp1"
            Grid.Column="0"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="10 0 5 0"
            FontSize="30"
            TextAlignment="Center"
            VerticalContentAlignment="Center"
            IsEnabled="False"
            BorderThickness="1 0 1 0"
            >20°C
        </TextBox>
        <TextBox 
            x:Name="WeatherPressure1"
            Grid.Column="0"
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Margin="10 0 5 0"
            FontSize="28"
            TextAlignment="Center"
            VerticalContentAlignment="Center"
            IsEnabled="False"
            BorderThickness="1 0 1 0"
            >1018 hPa
        </TextBox>
        <TextBox 
            x:Name="WeatherHumidity1"
            Grid.Column="0"
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Margin="10 0 5 5"
            FontSize="30"
            TextAlignment="Center"
            VerticalContentAlignment="Center"
            IsEnabled="False"
            BorderThickness="1 0 1 1"
            >35%
        </TextBox>
        <TextBox
            x:Name="WeatherDt2"
            Grid.Column="2"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="5 10 5 0"
            FontSize="20"
            TextAlignment="Center"
            VerticalContentAlignment="Center"
            TextWrapping="Wrap"
            IsEnabled="False"
            BorderThickness="1 1 1 0"
