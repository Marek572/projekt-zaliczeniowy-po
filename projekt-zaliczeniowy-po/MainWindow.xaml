        </TextBox>
        <Border
            Grid.Column="4"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            BorderThickness="1 0 1 0"
            Margin="5 0 5 0"
            Background="#FFD9D9D9"
            >
